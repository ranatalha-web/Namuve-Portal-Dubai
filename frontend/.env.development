# React Development Server Configuration
# Disable WebSocket connection for hot reloading to prevent connection errors
WDS_SOCKET_PORT=0
FAST_REFRESH=false

# Alternative: Use polling instead of WebSocket for file watching
CHOKIDAR_USEPOLLING=true

# Suppress React development logs
GENERATE_SOURCEMAP=false
BROWSER=none
REACT_APP_SILENT=true

# Backend API URL for local development
REACT_APP_API_URL=http://localhost:5000
